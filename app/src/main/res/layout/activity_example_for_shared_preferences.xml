<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExampleForSharedPreferences">

    <TextView
        android:id="@+id/text_for_shared_preferences_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name: "/>

    <EditText
        android:id="@+id/edit_text_for_shared_preferences_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="write text"/>

    <Button
        android:id="@+id/save_nameButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save_nameButton"/>

    <Button
        android:id="@+id/post_nameButton_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post_nameButton"/>

</LinearLayout>